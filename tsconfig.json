{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
